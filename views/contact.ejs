<h1>Halaman Contact</h1>
<a
  href="/contact/add"
  class="btn btn-primary btn-lg active mb-2"
  role="button"
  aria-pressed="true"
  >Tambah Data</a
>

<% if (msg.length !== 0) { %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
   
    <strong><%= msg %> </strong>
    
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } %>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nama</th>
      <th scope="col">No Hp</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% contacts.forEach(c => { %>
    <tr>
      <td><%= c.nama %></td>
      <td><%= c.nohp %></td>
      <td><%= c.email %></td>
      <td>
        <a href="/contact/edit/<%= c._id %>" class="btn btn-success badge"
          >Edit</a
        >
        <!-- <a href="/contact/delete/<%= c._id %>" class="btn btn-danger badge"
          >Delete</a
        > -->

        <form action="/contact?_method=DELETE" method="post" class="d-inline">
        <input type="hidden" name="id" value="<%= c._id %>">
        <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin Akan Dihapus ?')">delete</button>
        </form>

      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
