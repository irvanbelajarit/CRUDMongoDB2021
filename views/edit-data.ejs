<div class="container">
  <% if (typeof errors !='undefined') { %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.forEach(e => { %>
      <li><%= e.msg %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>

  <form method="POST" action="/contact/update">
    <input type="hidden" name="_id" value="<%= contact._id %> " />
    <div class="form-group">
      <label for="nama">Nama</label>
      <input
        type="text"
        class="form-control"
        id="nama"
        name="nama"
        value="<%= contact.nama %>"
      />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        value="<%= contact.email %>"
      />
    </div>
    <div class="form-group">
      <label for="nohp">no hp</label>
      <input
        type="text"
        class="form-control"
        id="nohp"
        name="nohp"
        value="<%= contact.nohp %>"
      />
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>
